@model IEnumerable<FanStorey.Models.ApplicationUser>

@{
    ViewData["Title"] = "Registered Users";
}

<h1>@ViewData["Title"]</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Register Date
            </th>
            <th>
                Last Visit Date
            </th>
            <th>
                Privileges
            </th>
            <th>
                Active
            </th>
            @if (ViewBag.Admin == true)
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a class="nav-link text-dark" asp-controller="Users" asp-action="UserPage" asp-route-id="@item.Id">
                    @Html.DisplayFor(modelItem => item.UserName)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastVisitDate)
            </td>
            @if (item.Admin == true)
            {
                <td>
                    Admin
                </td>
            }
            else
            {
                <td>
                    —
                </td>
            }
            @if (!item.Blocked && item.EmailConfirmed)
            {
                <td>
                    +
                </td>
            }
            else
            {
                <td></td>
            }
            @if (ViewBag.Admin == true)
            {
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <a asp-action="Block" asp-route-id="@item.Id">Block</a> |
                    <a asp-action="SwitchAdmin" asp-route-id="@item.Id">Admin</a>
                </td>
            }
        </tr>
        }
    </tbody>
</table>