@model FanStorey.Models.Story

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Story</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 col-md-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10 col-md-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2 col-md-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10 col-md-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<div>
    <h2>Chapters</h2>
    @if (Model.Chapters != null)
    {
        @foreach (var item in Model.Chapters)
        {
            <h4>
                <a class="nav-link text-dark" asp-controller="Chapters" asp-action="Read" asp-route="@item.Id">
                    @Html.DisplayNameFor(chapter => item.Title)
                </a>
            </h4>
        }
    }
</div>
<div>
    <a asp-controller="Chapters" asp-action="Create" asp-route-id="@Model.Id">
        Create new chapter
    </a> |
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
